{
  "include": ["src"],
  "exclude": ["src/__TEST__"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "outDir": "build",
    "rootDir": "src",
    "jsx": "react-jsx"
  }
}
